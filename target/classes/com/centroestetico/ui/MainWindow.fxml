<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.centroestetico.ui.MainController">

    <!-- ▸ barra de navegación horizontal -->
    <top>
        <HBox spacing="16" alignment="CENTER"
              BorderPane.alignment="CENTER"
              styleClass="nav-bar">
            <Button text="Clientes"   onAction="#showClientes"  styleClass="pill"/>
            <Button text="Empleados"  onAction="#showEmpleados" styleClass="pill"/>
            <Button text="Servicios"  onAction="#showServicios" styleClass="pill"/>
            <Button text="Agenda"     onAction="#showAgenda"    styleClass="pill"/>
        </HBox>
    </top>

    <!-- ▸ centro: cambian las vistas (arrancamos con calendario) -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
</BorderPane>

